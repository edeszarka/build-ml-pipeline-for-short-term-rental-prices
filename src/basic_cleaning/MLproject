name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Name of the artifact
        type: string

      output_artifact:
        description: Name of the output artifact for the W&B
        type: string

      output_type:
        description: Type of the artifact to create
        type: string

      output_description:
        description: Description for the artifact
        type: string

      min_price:
        description: Float to use as the minimum price of rental price
        type: float

      max_price:
        description: Float to use as the maximum price of rental price
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact} --output_artifact {output_artifact} --output_type {output_type} --output_description {output_description} --min_price {min_price} --max_price {max_price}
